@model RecipeViewModel

<h1>@Model.Name</h1>
<table class="table">
    <thead>
        <tr>
            <th>ingredient</th>
            <th>quantity</th>
            <th>protein</th>
            <th>carbs</th>
            <th>fats</th>
            <th>calories</th>
        </tr>
    </thead>
    <tbody>
        @foreach (IngredientListItemViewModel ingredient in Model.Ingredients)
        {
        <tr>
            <td><a asp-controller="Ingredient" asp-action="Detail" asp-route-id="@ingredient.Ingredient.Id">@ingredient.Ingredient.Name</a></td>
            <td>@ingredient.Quantity</td>
            <td>@(ingredient.Ingredient.Protein * ingredient.Quantity)</td>
            <td>@(ingredient.Ingredient.Carbs * ingredient.Quantity)</td>
            <td>@(ingredient.Ingredient.Fats * ingredient.Quantity)</td>
            <td>@(ingredient.Ingredient.Calories * ingredient.Quantity)</td>
        </tr>
        }
        <tr>
            <th colspan="2">total</th>
            <td>@Model.Ingredients.Sum(i => i.Ingredient.Protein * i.Quantity)</td>
            <td>@Model.Ingredients.Sum(i => i.Ingredient.Carbs * i.Quantity)</td>
            <td>@Model.Ingredients.Sum(i => i.Ingredient.Fats * i.Quantity)</td>
            <td>@Model.Ingredients.Sum(i => i.Ingredient.Calories * i.Quantity)</td>
        </tr>
    </tbody>
</table>

