@model Ingredient

<h1 class="text-center">create ingredient</h1>
<div class="w-25 m-auto">
    <form method="post" asp-action="Create" class="d-flex flex-column gap-2">
        <div class="d-flex justify-content-between">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" autofocus>
        </div>
        <div class="d-flex justify-content-between">
            <label asp-for="Protein">Protein</label>
            <input asp-for="Protein">
        </div>
        <div class="d-flex justify-content-between">
            <label asp-for="Carbs">Carbs</label>
            <input asp-for="Carbs">
        </div>
        <div class="d-flex justify-content-between">
            <label asp-for="Fats">Fats</label>
            <input asp-for="Fats">
        </div>
        <button class="btn btn-dark mt-2" type="submit">create</button>
    </form>
</div>
