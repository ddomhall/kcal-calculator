@model DayViewModel

<h1>@Model.Name</h1>
<table class="table">
    <thead>
        <tr>
            <th>recipe</th>
            <th>protein</th>
            <th>carbs</th>
            <th>fats</th>
            <th>calories</th>
        </tr>
    </thead>
    <tbody>
        @foreach (RecipeViewModel recipe in Model.Recipes)
        {
        <tr>
            <td><a asp-controller="Recipe" asp-action="Detail" asp-route-id="@recipe.Id">@recipe.Name</a></td>
            <td>@recipe.Ingredients.Sum(i => i.Ingredient.Protein * i.Quantity)</td>
            <td>@recipe.Ingredients.Sum(i => i.Ingredient.Carbs * i.Quantity)</td>
            <td>@recipe.Ingredients.Sum(i => i.Ingredient.Fats * i.Quantity)</td>
            <td>@recipe.Ingredients.Sum(i => i.Ingredient.Calories * i.Quantity)</td>
        </tr>
        }
        <tr>
            <th>total</th>
            <td>@Model.Recipes.Sum(i => i.Ingredients.Sum(j => j.Ingredient.Protein * j.Quantity))</td>
            <td>@Model.Recipes.Sum(i => i.Ingredients.Sum(j => j.Ingredient.Carbs * j.Quantity))</td>
            <td>@Model.Recipes.Sum(i => i.Ingredients.Sum(j => j.Ingredient.Fats * j.Quantity))</td>
            <td>@Model.Recipes.Sum(i => i.Ingredients.Sum(j => j.Ingredient.Calories * j.Quantity))</td>
        </tr>
    </tbody>
</table>
